# ============================================================================
# IMAGE TOOLS - ENVIRONMENT CONFIGURATION
# ============================================================================

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
SERVER_PORT=8001
SERVER_HOST=0.0.0.0
API_PREFIX=/api/v1
DEBUG=false
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_EXPIRY_DAYS=7
MAX_IMAGES_PER_SESSION=5
SESSION_SECRET_KEY=change-this-secret-key-in-production-min-32-chars

# ----------------------------------------------------------------------------
# Upload Configuration
# ----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=20
CHUNK_SIZE_MB=5
MAX_PARALLEL_UPLOADS=3
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,webp,tiff

# ----------------------------------------------------------------------------
# Storage Configuration
# ----------------------------------------------------------------------------
STORAGE_PATH=./storage
TEMP_STORAGE_PATH=./storage/temp
DATABASE_URL=sqlite+aiosqlite:///./storage/imagetools.db

# ----------------------------------------------------------------------------
# Compression Presets
# ----------------------------------------------------------------------------
# Email Preset
EMAIL_MAX_WIDTH=800
EMAIL_MAX_HEIGHT=800
EMAIL_QUALITY=85
EMAIL_TARGET_SIZE_KB=500
EMAIL_FORMAT=JPEG

# Web Preset
WEB_MAX_WIDTH=1920
WEB_MAX_HEIGHT=1920
WEB_QUALITY=90
WEB_TARGET_SIZE_KB=500
WEB_FORMAT=JPEG

# High Quality Web Preset
WEB_HQ_MAX_WIDTH=2560
WEB_HQ_MAX_HEIGHT=2560
WEB_HQ_QUALITY=95
WEB_HQ_TARGET_SIZE_KB=1000
WEB_HQ_FORMAT=WEBP

# ----------------------------------------------------------------------------
# Image Processing
# ----------------------------------------------------------------------------
THUMBNAIL_SIZE=300
THUMBNAIL_QUALITY=80
UNDO_STACK_LIMIT=10

# ----------------------------------------------------------------------------
# Cleanup Configuration
# ----------------------------------------------------------------------------
CLEANUP_SCHEDULE_CRON=0 2 * * *
CLEANUP_ENABLED=true

# ----------------------------------------------------------------------------
# CORS Configuration (Development)
# ----------------------------------------------------------------------------
CORS_ENABLED=true
# Add your production URL to CORS_ORIGINS (e.g., http://192.168.1.100:8082 or https://yourdomain.com)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000,http://localhost:8082

# ----------------------------------------------------------------------------
# AI / OpenRouter Configuration
# ----------------------------------------------------------------------------
# OpenRouter OAuth2 PKCE Configuration
# Get these from: https://openrouter.ai/keys (create an OAuth app)

# IMPORTANT FOR PRODUCTION:
# Set this to your actual deployment URL, NOT localhost:5173
# The OAuth callback URL will automatically be: {OPENROUTER_APP_URL}/oauth/callback
# Examples:
#   - Docker on same machine: http://localhost:8082
#   - Docker on LAN: http://192.168.1.100:8082
#   - Production domain: https://yourdomain.com

# Application URL for OpenRouter
OPENROUTER_APP_URL=http://localhost:5173

# Application name displayed in OpenRouter
OPENROUTER_APP_NAME=ImageTools

# Optional: Fallback API key for server-side operations (not for user auth)
# Leave empty to require users to connect their own accounts
OPENROUTER_API_KEY=
